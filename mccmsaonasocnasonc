[32m+[m[32mimport data from "../../assets/test-items.json";[m
[32m+[m
[32m+[m[32mexport const SortItems = (inputIds, byProperty) => {[m
[32m+[m[32m  let items = inputIds.map((id) => data.items.find((item) => item.id === id)); // The output items array[m
[32m+[m[32m  items.sort((a, b) => b[byProperty] - a[byProperty]);[m
[32m+[m[32m  return items.map((item) => item.id); //returns ids of items ordered by given property[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexport const FilterItems = (inputIds, byProperty, inputProperty) => {[m
[32m+[m[32m  let items = inputIds.map((id) => data.items.find((item) => item.id === id)); // The output items array[m
[32m+[m[32m  items = items.filter((item) => item[byProperty] === inputProperty);[m
[32m+[m[32m  return items.map((item) => item.id); //returns ids of items filtered by given property;[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexport const GetItems = (inputIds) => {[m
[32m+[m[32m  return inputIds.map((id) => data.items.find((item) => item.id === id)); //returns array of items with input ids[m
[32m+[m[32m};[m
